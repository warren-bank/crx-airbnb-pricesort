{
  "name": "Airbnb Price Sort",
  "version": "1.0.0",
  "description": "Enable sorting search results by final price on Airbnb website",
  "content_scripts": [{
    "matches": [
      "*://*.airbnb.com/s/*"
    ],
    "all_frames": true,
    "run_at": "document_idle",
    "js": ["content.js"]
  }],
  "icons": {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
     "128": "img/icon128.png"
  },
  "manifest_version": 2
}
